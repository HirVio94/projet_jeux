{% extends 'base.html.twig' %}

{% block title %}Jeux index{% endblock %}

{% block body %}
<section>
    <h1>Jeux index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>DÃ©veloppeur</th>
                <th>Genres</th>
                <th>Plate-formes</th>
                <th>Video_path</th>
                <th>Couverture_path</th>
                <th>Date_sortie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jeu in jeux %}

            <tr>
                <td>{{ jeu.id }}</td>
                <td>{{ jeu.titre }}</td>
                <td>{{ jeu.description }}</td>
                <td>{{ jeu.developpeur.libelle }}</td>
                <td>{% for genre in jeu.genre %}
