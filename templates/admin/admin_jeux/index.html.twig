                <td>{% for plateforme in jeu.plateForme %}
                    {{ plateforme.libelle }}
                {% endfor %}</td>
                <td>{{ jeu.videoPath }}</td>
                <td>{{ jeu.couverturePath }}</td>
                <td>{{ jeu.classification.libelle }}</td>
                <td>{{ jeu.dateSortie.format('Y-m-d')}}</td>
                <td>
                    {% include ("admin/admin_jeux/_delete_form.html.twig") %}
                    <a href="{{ path('admin.jeux.edit', {'id': jeu.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin.jeux.new') }}">Create new</a>
