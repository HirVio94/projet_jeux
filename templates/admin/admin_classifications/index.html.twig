{% extends 'base.html.twig' %}

{% block title %}Classifications index{% endblock %}

{% block body %}
    <section>
    <h1>Classifications index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle_classification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classification in classifications %}
            <tr>
                <td>{{ classification.id }}</td>
                <td>{{ classification.libelle }}</td>
                <td>
                    <a href="{{ path('admin.classifications.show', {'id': classification.id}) }}">show</a>
                    {% include "admin/admin_classifications/_delete_form.html.twig" %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin.classifications.new') }}">Create new</a>

    </section>
{% endblock %}
