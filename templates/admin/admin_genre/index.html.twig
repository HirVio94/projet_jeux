{% extends 'base.html.twig' %}

{% block title %}Genres index{% endblock %}

{% block body %}
    <section>
    <h1>Genres index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle_genre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.libelle }}</td>
                <td>
                    <a href="{{ path('admin.genre.show', {'id': genre.id}) }}">show</a>
                    <a href="{{ path('admin.genre.edit', {'id': genre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin.genre.new') }}">Create new</a>
    </section>
{% endblock %}
