{% extends 'base.html.twig' %}

{% block title %}Avis index{% endblock %}

{% block body %}
<main>
<section>
    <h1>Avis index</h1>
    <a href="{{ path('admin.avis.new') }}" class="ajouter">Ajouter avis</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for avi in avis %}
            <tr>
                <td>{{ avi.id }}</td>
                <td><p>{{ avi.message }}</p></td>
                <td>{{ avi.note }}</td>
                <td>
                    
                    <a href="{{ path('admin.avis.edit', {'id': avi.id}) }}" class="modifier">Modifier</a>
                    {% include "admin/admin_avis/_delete_form.html.twig" %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
</section>
</main>
{% endblock %}
