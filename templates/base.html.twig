<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		<link rel="stylesheet" href="/css/application.css" type="text/css"/>
		<link rel="stylesheet" href="/css/jeux.css" type="text/css"/>
		<link rel="stylesheet" href="/css/form.css" type="text/css"/>
		<link rel="stylesheet" href="/css/user.css" type="text/css"/>
		<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
		<script src="/js/application.js"></script>
		{% if section == 'administration' %}
			<link rel="stylesheet" href="/css/admin.css" type="text/css"/>
			<script src="/js/admin.js"></script>
		{% endif %}
		<script defer src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" integrity="sha384-haqrlim99xjfMxRP6EWtafs0sB1WKcMdynwZleuUSwJR0mDeRYbhtY+KPMr+JL6f" crossorigin="anonymous"></script>
		{# <script src="/build/runtime.js" defer></script>
										<script src="/build/app.js" defer></script> #}

		{{ encore_entry_script_tags('app') }}
		{# Run `composer require symfony/webpack-encore-bundle`
												           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		<input type="hidden" name="user" id="user" {% if app.user %}value={{app.user.id}}{% endif %}
		 />
		{% if section == 'administration' %}
			<header>
				<div id="div_container">
					<div id="div_titre">
						<h1>
							<a href={{path('admin') }}>Dashboard administration</a>
						</h1>
					</div>

					<div id="div_header_container">
						<div id="div_authentification">


